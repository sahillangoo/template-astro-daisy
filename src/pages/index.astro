---
import Layout from '@/layouts/BaseLayout.astro';
import { Icon } from 'astro-icon/components';
---

<Layout>
	<div class="container mx-auto space-y-24 py-16 lg:py-20">
		<!-- Hero Section -->
		<section class="space-y-6 text-center">
			<div class="text-primary">
				<Icon name="ph:sparkle-duotone" class="mx-auto h-12 w-12" />
			</div>
			<h1 class="text-4xl font-bold">Welcome to Clarity</h1>
			<p class="text-base-content/70 mx-auto max-w-xl text-lg">
				A minimalist one-pager to keep things sharp, simple, and elegant.
			</p>
			<button class="btn btn-primary mt-6">Get Started</button>
		</section>
		<!-- Features Section -->
		<section class="mx-auto grid max-w-4xl grid-cols-1 gap-8 md:grid-cols-3">
			<div class="bg-base-200 rounded-2xl p-6 text-center shadow-sm">
				<Icon name="ph:rocket-launch-duotone" class="text-primary mx-auto mb-4 h-8 w-8" />
				<h2 class="text-lg font-semibold">Astro 5 Performance</h2>
				<p class="text-base-content/70 text-sm">
					Lightning-fast static site generation with zero JS by default for optimal SEO and core web
					vitals.
				</p>
			</div>

			<div class="bg-base-200 rounded-2xl p-6 text-center shadow-sm">
				<Icon name="ph:paint-brush-duotone" class="text-primary mx-auto mb-4 h-8 w-8" />
				<h2 class="text-lg font-semibold">Modern Styling</h2>
				<p class="text-base-content/70 text-sm">
					Flexible design system with Tailwind CSS 4 and DaisyUI 5 for rapid development and
					theming.
				</p>
			</div>

			<div class="bg-base-200 rounded-2xl p-6 text-center shadow-sm">
				<Icon name="ph:code-duotone" class="text-primary mx-auto mb-4 h-8 w-8" />
				<h2 class="text-lg font-semibold">Developer Experience</h2>
				<p class="text-base-content/70 text-sm">
					Built-in MD/MDX support, SEO optimization, and type-safe APIs for exceptional developer
					workflow.
				</p>
			</div>
		</section>

		<!-- CTA Section -->
		<section class="card bg-primary text-primary-content mx-auto max-w-4xl">
			<div class="card-body text-center">
				<h2 class="card-title mx-auto mb-4 text-2xl">Ready to start your project?</h2>
				<p class="mb-6">Get started with our minimal template and build something amazing today.</p>
				<div class="flex justify-center">
					<a
						href="https://github.com/sahillangoo/template-astro-daisy"
						target="_blank"
						rel="noopener noreferrer"
						class="btn btn-outline flex items-center">
						<Icon name="ph:github-logo-duotone" class="mr-2 h-5 w-5" /> GitHub
					</a>
				</div>
			</div>
		</section>
	</div>
</Layout>
